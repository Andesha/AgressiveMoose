#version 130

in vec3 vertexPosition;
in vec4 vertexColor;
in vec2 texCoord;

out vec4 fragmentColor;
out vec2 TexCoord;

uniform mat4 proj;
uniform mat4 view;
uniform mat4 model;

void main(){
	gl_Position = proj * view * model * vec4(vertexPosition, 1.0);
	fragmentColor = vertexColor;
	TexCoord = texCoord;
}